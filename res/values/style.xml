<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 修改界面里 顶部的linearlayout布局 -->
    <style name="modifytoplayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">#404040</item>
    </style>

    <!-- 修改界面里 最大整体的相对布局 -->
    <style name="modifysumlayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">#ffffff</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <!-- 修改界面里 顶部按钮的linearlayout布局 -->
    <style name="modifytoptv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- 修改界面里 下面按钮的linearlayout布局 -->
    <style name="modifybottomlayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- 修改界面里 保存按钮 -->
    <style name="modifysavebtn">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@drawable/btnstyle_dialogtext</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:text">保存</item>
    </style>

    <!-- 修改界面里tablelayout -->
    <style name="modifytablelayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:shrinkColumns">1</item>
        <item name="android:stretchColumns">1</item>
    </style>

    <style name="ButtonGreen" parent="@android:style/Widget.Button">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@drawable/skin_color_button</item>
        <item name="android:background">@drawable/common_btn_green</item>
    </style>

    <style name="ButtonRed" parent="@android:style/Widget.Button">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@drawable/skin_color_button</item>
        <item name="android:background">@drawable/common_btn_red</item>
    </style>

    <!-- 修改界面里左边textview -->
    <style name="TextviewStyle">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- 修改界面里右边editview -->
    <style name="EditviewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/bg_et</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- 操作项样式 start -->
    <style name="option_item_rl">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ic_bg_item_selector</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">13dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>
    
    <!-- 操作项样式 start -->
    <style name="option_item_rl_1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ic_bg_item_selector</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="option_item_img">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
    
    <style name="option_operate_img">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
    </style>
    
    <style name="option_operate_switch">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">20dp</item>
    </style>
    
    <style name="option_item_text_parent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#333333</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="option_item_text" parent="@style/option_item_text_parent">
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textColor">#333333</item>
    </style>
    
	<style name="mystyle" parent="android:Animation">
	    <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>  //进入时的动画
	    <item name="@android:windowExitAnimation">@anim/dialog_exit</item>    //退出时的动画
	</style>
    <style name="dialog_center" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_enter_center</item>  //进入时的动画
    </style>
    <style name="notitle" >
        <item name="android:windowNoTitle">true</item>
    </style>
    
     
    <style name="tv_label">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:ems">7</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:padding">2dp</item>
    </style>
    
    <style name="match_parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
</resources>