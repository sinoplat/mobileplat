<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_ios_roundcorner_progress" >

    <LinearLayout
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_ios_roundcorner_progress"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingBottom="14dip"
        android:paddingEnd="8dip"
        android:paddingStart="8dip"
        android:paddingTop="14dip" >

        <!-- style="?android:attr/progressBarStyle" -->

        <ProgressBar
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="12dip"
            android:layout_marginRight="12dip"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/progressstyleshape"
            android:indeterminateDuration="1200"
            android:max="10000" />

        <!--
            <com.hss01248.roundprogressbar.RoundProgressBar
            android:id="@+id/pb"
            android:layout_centerInParent="true"
            app:cpb_duration = "1200"
            android:layout_marginLeft="5dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        -->

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="djjdjdjd"
            android:textColor="#222222" />
    </LinearLayout>

</FrameLayout>