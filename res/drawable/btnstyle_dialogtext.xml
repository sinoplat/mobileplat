<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false"><shape>
            <gradient android:angle="270" android:endColor="#555555" android:startColor="#303030" />

            <stroke android:width="1px" android:color="#d4d4d4" />

            <padding android:bottom="5dp" android:left="2dp" android:right="2dp" android:top="5dp" />

            <corners android:radius="2dp" />
        </shape></item>
    <item android:state_pressed="true"><shape>
            <gradient android:angle="270" android:endColor="#303030" android:startColor="#555555" />

            <stroke android:width="1px" android:color="#d4d4d4" />

            <corners android:radius="3dp" />
        </shape></item>

</selector>